{
  "name": "text-stream-search",
  "version": "5.0.0",
  "description": "Searches for occurrences of a given search term in Node.js text streams",
  "homepage": "https://github.com/Originate/node-text-stream-search#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Originate/node-text-stream-search.git"
  },
  "license": "ISC",
  "author": "Kevin Goslar",
  "type": "module",
  "exports": "./dist/text-stream-search.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "clean": "rm -rf dist",
    "coverage": "nyc node_modules/.bin/mocha --require source-map-support/register test/*.ts && nyc report --reporter=text-lcov | node_modules/.bin/coveralls",
    "docs": "text-runner",
    "fix": "dprint fmt && eslint --fix",
    "lint": "tsc --noEmit && eslint && dprint check && tools/actionlint",
    "prepublishOnly": "npm run build",
    "setup": "curl -s https://raw.githubusercontent.com/rhysd/actionlint/main/scripts/download-actionlint.bash | bash && mkdir -p tools && mv actionlint tools",
    "test": "npm run build && npm run fix && npm run lint && npm run unit && npm run docs",
    "unit": "mocha --reporter dot test/*.ts",
    "update": "npm-check-updates -u && npm install"
  },
  "devDependencies": {
    "@eslint/js": "9.22.0",
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.11",
    "coveralls": "3.1.1",
    "dprint": "0.49.0",
    "eslint": "9.22.0",
    "eslint-plugin-perfectionist": "4.10.1",
    "memory-streams": "0.1.3",
    "mocha": "10.0.0",
    "npm-check-updates": "17.1.15",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "source-map-support": "0.5.21",
    "text-runner": "7.1.0",
    "textrun-npm": "0.3.0",
    "ts-node": "10.9.1",
    "typescript": "5.8.2",
    "typescript-eslint": "^8.26.1"
  }
}
