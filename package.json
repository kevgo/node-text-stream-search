{
  "name": "text-stream-search",
  "version": "5.0.0",
  "description": "Searches for occurrences of a given search term in Node.js text streams",
  "homepage": "https://github.com/Originate/node-text-stream-search#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Originate/node-text-stream-search.git"
  },
  "license": "ISC",
  "author": "Kevin Goslar",
  "type": "module",
  "exports": "./dist/text-stream-search.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "coverage": "nyc node_modules/.bin/mocha --require source-map-support/register test/*.ts && nyc report --reporter=text-lcov | node_modules/.bin/coveralls",
    "docs": "text-run --offline --format=dot",
    "fix": "dprint fmt && eslint --ext=.ts --fix .",
    "lint": "eslint --ext=.ts . && dprint check . && tsc --noEmit && tools/actionlint",
    "prepublishOnly": "make build",
    "test": "tsc make spec"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@types/chai": "4.3.3",
    "@types/mocha": "9.1.1",
    "@types/node": "18.7.11",
    "@typescript-eslint/eslint-plugin": "5.34.0",
    "@typescript-eslint/parser": "5.34.0",
    "coveralls": "3.1.1",
    "dprint": "0.49.0",
    "eslint": "8.22.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-typescript-sort-keys": "2.1.0",
    "memory-streams": "0.1.3",
    "mocha": "10.0.0",
    "npm-check-updates": "17.1.15",
    "nyc": "15.1.0",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.2.18",
    "source-map-support": "0.5.21",
    "text-runner": "6.0.0",
    "textrun-make": "0.2.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  }
}
